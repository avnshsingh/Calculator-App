<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/calculator_image"
        app:srcCompat="@drawable/calculator" />

    <EditText
        android:id="@+id/etFirstValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="Enter First Value"
        android:inputType="number"
        android:padding="18dp"
        android:shadowColor="#180B0B"
        android:textColor="#180F0F"
        android:textColorHighlight="#090606"
        android:textColorHint="#0E171C"
        android:textColorLink="#100606"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etSecondValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="Enter Second Value"
        android:inputType="number"
        android:padding="18dp"
        android:shadowColor="#110D0D"
        android:textColor="#1B1313"
        android:textColorHighlight="#150B0B"
        android:textColorHint="#0D1315"
        android:textColorLink="#1A0F0F"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="18dp"
        android:shadowColor="#0B0909"
        android:textColor="#0B0808"
        android:textColorHighlight="#0E0B0B"
        android:textColorLink="#140B0B"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#870101"
        android:backgroundTint="#FFFFFF"
        android:padding="18dp"
        android:text="@string/plus"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSubtract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#870101"
        android:backgroundTint="#FFFFFF"
        android:padding="18dp"
        android:text="@string/minus"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#870101"
        android:backgroundTint="#FFFFFF"
        android:padding="18dp"
        android:text="@string/multiply"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/btnDevide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#870101"
        android:backgroundTint="#FFFFFF"
        android:padding="18dp"
        android:text="@string/divide"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>